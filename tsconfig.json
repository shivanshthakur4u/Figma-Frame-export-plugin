{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "figma": ["node_modules/@figma/plugin-typings"],
      "figma-plugin-ds-typings": ["node_modules/@figma/plugin-typings"],
    }
,    
    "types": ["figma", "@figma/plugin-typings"],
    "typeRoots": ["node_modules/@types", "node_modules/@figma/plugin-typings"]

  }
}
